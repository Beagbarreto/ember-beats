{{controls-component}}

<h1>{{model.name}}</h1>

<table style="width: 100%;">
{{#each model.channels as |channel|}}
  <tr>
    <td align="center">{{channel.sound}}</td>
    {{#each channel.steps as |step|}}
      <td style="{{if step.isPlaying 'background-color: green;'}}">{{step.velocity}}</td>
    {{/each}}
  </tr>
{{/each}}
</table>

{{outlet}}
